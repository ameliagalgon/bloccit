<h1>New Question</h1>

<div class="row">
    <div class="col-md-8">
        <%= form_for @question do |f| %>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, :required => true, class: 'form-control', placeholder: "Enter question title" %>
            </div>
            <div class="form-group">
                <%= f.label :body %>
                <%= f.text_area :body, :required => true, rows: 8, class: 'form-control', placeholder: "Enter question body" %>
            </div>
           <%= f.submit "Save", class: 'btn btn-success' %>
         <% end %>
    </div>
</div>
