<%= form_for [topic, sponsored_post] do |f| %>
     <% if sponsored_post.errors.any? %>
       <div class="alert alert-danger">
            <h4><%= pluralize(sponsored_post.errors.count, "error") %>.</h4>
            <ul>
                 <% sponsored_post.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                 <% end %>
            </ul>
       </div>
     <% end %>
     <%= form_group_tag(sponsored_post.errors[:title]) do %>
          <%= f.label :title %>
          <%= f.text_field :title, :required => true, class: 'form-control', placeholder: "Enter post title" %>
     <% end %>
     <%= form_group_tag(sponsored_post.errors[:body]) do %>
          <%= f.label :body %>
          <%= f.text_area :body, :required => true, rows: 8, class: 'form-control', placeholder: "Enter post body" %>
     <% end %>
     <%= form_group_tag(sponsored_post.errors[:price]) do %>
          <%= f.label :price %>
          <%= f.number_field :price, :required => true, class: 'form-control' %>
     <% end %>
   <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
<% end %>
