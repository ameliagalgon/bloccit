<h1><%= @question.title %></h1>

<div class="row">
    <div class="col-md-8">
        <p><%= @question.body %></p>
        <small>resolved: <%= @question.resolved == true%></small>
    </div>
    <div class="col-md-4">
        <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
        <%= link_to "Delete Post", @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this question?'} %>
    </div>

</div>

<div class="answers">
     <% @question.answers.each do |answer| %>

          <div class="row">
               <div class="col-md-8">
                    <div class="media">
                         <p>
                              Answer <%= @question.answers.index(answer) + 1 %>: <%= answer.body %>
                         </p>
                    </div>
               </div>
          </div>

     <% end %>
</div>
